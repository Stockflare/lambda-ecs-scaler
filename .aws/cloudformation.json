{
  "AWSTemplateFormatVersion" : "2010-09-09",

  "Description" : "Lambda function that AutoScales ECS Services based on Cloudwatch Alarms",

  "Parameters" : {

    "FunctionPackage" : {
      "Type" : "String"
    },

    "FunctionDescription" : {
      "Type" : "String",
      "Default" : "Lambda function that manages moving DynamoDB Streams to Elasticsearch"
    },

    "FunctionVersion" : {
      "Type" : "String"
    },

    "StackOutputsArn" : {
      "Type" : "String"
    }

  },

  "Resources" : {

    "Environment": {
      "Type": "Custom::StackOutputs",
      "Properties": {
        "ServiceToken": { "Ref" : "StackOutputsArn" },
        "StackName" : "environment"
      }
    },

    "LambdaFunctionRole" : {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version" : "2012-10-17",
          "Statement": [{
            "Effect": "Allow",
            "Principal": {
              "Service": [ "lambda.amazonaws.com" ]
            },
            "Action": [ "sts:AssumeRole" ]
          }]
        },
        "Path": "/",
        "Policies": [
          {
            "PolicyName": "root",
            "PolicyDocument": {
              "Version" : "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "logs:CreateLogGroup",
                    "logs:CreateLogStream",
                    "logs:PutLogEvents"
                  ],
                  "Resource": [ "arn:aws:logs:*:*:*" ]
                },
                {
                  "Effect": "Allow",
                  "Action": [
                    "ecs:DescribeServices",
                    "ecs:UpdateService"
                  ],
                  "Resource": [
                    "*"
                  ]
                }
              ]
            }
          }
        ]
      }
    },

    "LambdaFunctionToken": {
      "Type" : "AWS::Lambda::Function",
      "Properties" : {
        "Description" : { "Ref" : "FunctionDescription" },
        "Runtime" : "nodejs",
        "MemorySize" : "128",
        "Timeout" : "60",
        "Handler" : "index.handler",
        "Role" : {"Fn::GetAtt" : ["LambdaFunctionRole", "Arn"] },
        "Code" : {
          "S3Bucket" : { "Fn::GetAtt" : ["Environment", "ResourceBucket"] },
          "S3Key" : { "Fn::Join" : ["", [
            "lambda/", { "Ref" : "FunctionPackage" }, "_", { "Ref" : "FunctionVersion" }, ".zip"
          ]] }
        }
      }
    },

    "ScalingTopic" : {
      "Type" : "AWS::SNS::Topic",
      "Properties" : {
        "Subscription" : [{
          "Endpoint" : { "Fn::GetAtt" : ["LambdaFunctionToken", "Arn"] },
          "Protocol" : "lambda"
        }]
      }
    }


  },

  "Outputs" : {

    "Token" : {
      "Description" : "Retrieve Lambda Function Name",
      "Value" : { "Ref" : "LambdaFunctionToken" }
    },

    "TokenArn" : {
      "Description" : "Retrieve Etcd Token Lambda Function ARN",
      "Value" : { "Fn::Join": [ "", [
        "arn:aws:lambda:", { "Ref": "AWS::Region" },
        ":", { "Ref": "AWS::AccountId" }, ":function:",
        { "Ref" : "LambdaFunctionToken"}
      ]]}
    },

    "ScalingTopic" : {
      "Description" : "Scaling Topic for ECS Containers",
      "Value" : { "Ref" : "ScalingTopic" }
    }    

  }
}
